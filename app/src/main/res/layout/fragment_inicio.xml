<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#FFFFFF"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".inicio">


        <!-- TODO: Update blank fragment layout -->

        <TextView
            android:id="@+id/lblPopulares"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:fontFamily="@font/doppio_one"
            android:letterSpacing="0.2"

            android:paddingTop="7dp"
            android:shadowColor="#FF4AE7"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="20"
            android:text="CATEGORÃAS"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FF4AE7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="32dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewCategorias"
            android:layout_width="393dp"
            android:layout_height="100dp"
            android:layout_gravity="bottom"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="85dp" />

        <TextView
            android:id="@+id/lblPopulares2"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:fontFamily="@font/doppio_one"
            android:letterSpacing="0.2"

            android:paddingTop="7dp"
            android:shadowColor="#FF4AE7"
            android:shadowDx="0"
            android:shadowDy="0"

            android:shadowRadius="20"
            android:text="POPULARES"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="#FF4AE7"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="111dp"
            tools:layout_editor_absoluteY="272dp" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="393dp"

            android:layout_height="390dp"
            android:layout_gravity="bottom"

            android:shadowColor="#FFFFFF"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="10"
            tools:layout_editor_absoluteX="9dp"
            tools:layout_editor_absoluteY="327dp" />

        <EditText
            android:id="@+id/txtBuscar"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"

            android:ems="10"
            android:fontFamily="@font/doppio_one"
            android:hint="Buscar"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:textColor="#D8D8D8"
            android:textColorHint="#D8D8D8"
            android:textColorLink="#D8D8D8"
            android:textSize="16sp"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="204dp" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="40dp"

            android:layout_height="40dp"
            android:background="@color/black"
            app:srcCompat="@drawable/ic_baseline_search_24"
            tools:layout_editor_absoluteX="315dp"
            tools:layout_editor_absoluteY="204dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>

